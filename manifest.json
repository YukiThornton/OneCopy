{
  "manifest_version": 2,

  "name": "Copy JIRA Markdown",
  "description": "Save page URI and page title and selected text to clipboard.",
  "version": "1.0",
  "background": {
      "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab", "contextMenus"
  ],
  "icons": {
    "16": "icon.png"
  }
}
